@import '/assets/styles/iconfont';
.dialog-tips{
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-tips__content{
  text-align: center;
  width: 610rpx;
  height: 644rpx;
  background: #46d7b6;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dialog-tips__content__avatar{
  width: 144rpx;
  height: 144rpx;
  background: #46d7b6;
  border-radius: 100%;
  margin-top: -60rpx;
}
.dialog-tips__content__avatar image {
  width: 132rpx;
  height: 132rpx;
  border-radius: 100%;
  /* margin-top: -60rpx; */
  border-radius: 100%;
  border: 6rpx solid #fff;
}
.dialog-tips__content__name {
  margin-top: 20rpx;
  font-family: PingFang SC;
  font-size: 36rpx;
  color: #fff;
  line-height: 44rpx;
}
.dialog-tips__content__good {
  width: 180rpx;
  height: 180rpx;
  margin: 35rpx auto 0rpx;
}
.dialog-tips__content__good image {
  width: 100%;
  height: 100%;
}
.dialog-tips__content__tips {
  font-size: 30rpx;
  color: #fff;
  line-height: 44rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  padding: 10rpx 50rpx;
  padding-top: 20rpx;
  height: 100rpx;
}
.dialog-tips__content__dt {
  margin-top: 30rpx;
  width: 296rpx;
  height: 72rpx;
  background: #F2AE2C;
  border-radius: 72rpx;
  line-height: 72rpx;
  border: 12rpx solid #fff;
  color: #fff;
}
.dialog-tips__content__dt image {
  width: 100%;
  height: 100%;
}