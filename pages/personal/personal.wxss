.bj-page{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  height: 300rpx;
  background: #46d7b6;
  position: relative;
}
.header .avatar {
  position: absolute;
  bottom: -86rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 160rpx;
  height: 160rpx;
  border: 6rpx solid #fff;
  border-radius: 100%;
}
.content{
  flex: 1;
  height: 0;
  overflow-y: auto;
  margin-top: 100rpx;
  padding: 0 30rpx;
}
.content__item{
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #efefef;
}
.content__item__icon{
  font-size: 30rpx;
  color: #46d7b6;
  margin-right: 30rpx ;
}
.content__item__content {
  color: #474747;
}
.footer {
  height: 200rpx;
  display: flex;
  justify-content: center;
}
.footer__btn {
  width: 380rpx;
  height: 90rpx;
  text-align: center;
  background: #46d7b6;
  line-height: 90rpx;
  color: #fff;
  border-radius: 10rpx;
}