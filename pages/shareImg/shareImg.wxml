<view class="bj-page">
  <image class="bj__top" src="/assets/images/flower.png"></image>
  <view class="footer__wrap">
   
    <view class="footer">
      <view class="footer__left">
        <image class="avatar" src="{{userInfo.headUrl}}"></image>
        <view class="des">
          <view class="des__item">{{userInfo.name}}</view>
          <view class="des__item">{{userInfo.userLevel}}</view>
          <view class="des__item">{{userInfo.winCount}}胜{{userInfo.loseCount}}负｜{{userInfo.score}}分</view>
        </view>
      </view>
      <view class="save">
        <button wx:if="{{openSetting}}" class='saveBtn' open-type="openSetting" bindopensetting='openSetting' >
         <text class="iconfont icon-xiazai"></text>
          保存图片
        </button>
        <button wx:else class='saveBtn' bindtap='saveImg' >
         <text class="iconfont icon-xiazai"></text>
          保存图片
        </button>
      </view>
    </view>
  </view>
