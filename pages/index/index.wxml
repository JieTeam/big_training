<!--index.wxml-->
<view class="home-container" wx:if="{{show}}">
  <view class="top">
    <view class="top_userinfo">
     <view class="userinfo_left">
        <image class="headimg" src="{{userInfo.avatarUrl}}"></image>
     </view>
     <view class="userinfo_right">
        <view class="userName">{{userInfo.nickName}}</view>
        <view class="other_info">
          <view class="identity">
            <view class="identity_icon">
              <image class="icon_img" src="/assets/images/xc.png"/>
            </view>
            <view class="identity_name">{{userInfo.userLevel}}</view>
          </view>
          <view class="result">
            <view class="result_left">{{userInfo.winCount}}胜{{userInfo.loseCount}}负</view>
            <view class="result_right">{{userInfo.score}}分</view>
          </view>
        </view>
     </view>
    </view>
    <view class="ranking-list" data-type="ranking" bindtap="go">
      <text class="ranking-list_icon">
        <text class="iconfont icon-huangguan"></text>
      </text>
      <text class="ranking-list_name" >排行榜</text>
    </view>
  </view>
  <view class="bottom-entry">
    <view class="entry_list">
      <view class="pk-entry" wx:if="{{showHonor}}" data-type="honor" bindtap="go">
          <image class="pk-entry_img" src="/assets/images/honor/honor.png"></image>
          <view class="pk-entry_text">荣耀墙</view>
      </view>
      <view class="pk-entry" wx:else data-type="fight" bindtap="go">
          <image class="pk-entry_img" src="/assets/images/dz.png"></image>
          <view class="pk-entry_text">匹配对战</view>
      </view>
      <view class="pk-entry test" data-type="week" bindtap="go">
          <image class="pk-entry_img" src="/assets/images/weektest.png"></image>
          <view class="pk-entry_text">每周一测</view>
      </view>
      <view class="pk-entry knowledge" data-type="knowledgeBase" bindtap="go" >
          <image class="pk-entry_img" src="/assets/images/topics.png"></image>
          <view class="pk-entry_text">知识库</view>
      </view>
      <view class="pk-entry wrongTopic" data-type="wrongQuestion" bindtap="go">
          <image class="pk-entry_img" src="/assets/images/errors.png"></image>
          <view class="pk-entry_text">错题库</view>
      </view>
    </view>
  </view>
  <view class="bottom-fun">
      <view class="bottom-fun_result" data-type="record" bindtap="go">
          <text class="bottom-fun_icon">
            <text class="iconfont icon-jinggao"></text>
          </text>
          <text>战绩</text>
      </view>
      <view class="bottom-fun_result" bindtap="rulesBoxShow">
          <text class="bottom-fun_icon">
            <text class="iconfont icon-tishi"></text>
          </text>
          <text>赛制规则</text>
      </view>
      <!-- <view class="bottom-fun_result"> -->
        <button class="bottom-fun_result" open-type="share">
          <text class="bottom-fun_icon">
            <text class="iconfont icon-fenxiang"></text>
          </text>
          <text>分享</text>
        </button>
      <!-- </view> -->
  </view>
</view>
