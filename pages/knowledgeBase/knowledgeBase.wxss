/* pages/knowledgeBase/knowledgeBase.wxss */
page {
  width: 100%;
  height: 100%;
}
.knowledgeBase {
  width: 100%;
  height: 100%;
}
.title {
  width: 100%;
  height: 150rpx;
  background: #46d7b6;
  border-radius: 0 0 36rpx 36rpx;
  text-align: center;
}
.title_img {
  width: 180rpx;
  height: 75rpx;
  margin-top: 20rpx;
}
.rule-list .rule-item {
    width: 638rpx;
    height: 162rpx;
    border-radius: 36rpx;
    margin: 0 auto 60rpx;
    text-align: center;
    font-size: 38rpx;
    color: #fff;
    opacity: .8;
    line-height: 162rpx;
}

.rule-list .rule-item:nth-of-type(1) {
  background: #7ad8fe;
  margin-top: 44rpx;
}
.rule-list .rule-item:nth-of-type(2) {
  background: linear-gradient(to top right, #9999f9, 50%, #6c88d2)
}
.rule-list .rule-item:nth-of-type(3) {
  background: #fdcc7f;
}
.rule-list .rule-item:nth-of-type(4) {
  background: #92ccd7;
}