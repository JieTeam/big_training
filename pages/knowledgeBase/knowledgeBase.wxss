/* pages/knowledgeBase/knowledgeBase.wxss */
page {
  width: 100%;
  height: 100%;
}
.knowledgeBase {
  width: 100%;
  height: 100%;
}
.title {
  width: 100%;
  height: 150rpx;
  background: #46d7b6;
  border-radius: 0 0 36rpx 36rpx;
  text-align: center;
}
.title_img {
  width: 180rpx;
  height: 75rpx;
  margin-top: 20rpx;
}
.entry_list {
  width: 638rpx;
  height: 162rpx;
  border-radius: 36rpx;
  margin: 0 auto 60rpx;
  text-align: center;
  font-size: 38rpx;
  color: #fff;
  opacity: .8;
  line-height: 162rpx;
}
.entry_list.first {
  background: #7ad8fe;
  margin-top: 44rpx;
}
.entry_list.second {
  background: linear-gradient(to top right, #9999f9, 50%, #6c88d2)
}
.entry_list.third {
  background: #fdcc7f;
}
.entry_list.fourth {
  background: #92ccd7;
}