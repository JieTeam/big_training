<view class="bj-page">
  <view class="page__header">
    <view class="tab">
      <view 
        wx:for="{{rankingTabData}}" 
        wx:key="index"
        data-item="{{item}}"
        bindtap="handleTab"
        class="tab__item {{item.checked ? 'checked' : '' }}">
        {{item.title}}
      </view>
    </view>
    <view class="ranking__person" wx:if="{{checkedType === 'person'}}">
      <view class="ranking__person__headerpic">
        <image src="https://thirdwx.qlogo.cn/mmopen/vi_32/miaS2lJxGUrbvRvvwdNn0iciaic2LWqFItdXjicicTEfrJMHgElUf4vibGicjlTwXQJt2jfdE7XicSzAyIYaEkmibhuEmibNw/132"></image>
      </view>
      <view class="ranking__person__des">
        <view class="name">
          张三
        </view>
        <view class="level">
          <image src='/assets/images/grading.jpg'></image>
          <view class="level__content">执法专家</view>
        </view>
      </view>
      <view class="ranking__person__tips">
        第66名
      </view>
    </view>
  </view>
  <view class="page__content" style="margin-top: 100rpx" hidden="{{checkedType !== 'person'}}">
    <ranking-table cloumn="{{personClomn}}" data="{{personData}}"></ranking-table>
  </view>
  <view class="page__content" hidden="{{checkedType !== 'province'}}">
    <ranking-table cloumn="{{personClomn}}" data="{{personData}}"></ranking-table>
  </view>
</view>
