.fight_result {
  width: 100%;
  min-height: 100%;
  background: #46d7b6;
  padding-top: 240rpx;
}
.fight_result .result {
  width: 670rpx;
  margin: 0 auto;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 140rpx 0 16rpx;
  box-shadow: 0 4rpx 30rpx 10rpx rgba(0, 0, 0, 0.08);
}
.fight_result .result .me,
.fight_result .result .rival {
  flex: 1;
  padding: 0 30rpx;
}
.fight_result .result .me .header image,
.fight_result .result .rival .header image {
  height: 138rpx;
  width: 138rpx;
  border-radius: 50%;
}
.fight_result .result .me .header .crown,
.fight_result .result .rival .header .crown {
  width: 100%;
  left: 0;
  top: -58rpx;
}
.fight_result .result .me .header .crown image,
.fight_result .result .rival .header .crown image {
  width: 76rpx;
  height: 60rpx;
}
.fight_result .result .me .name,
.fight_result .result .rival .name {
  padding: 30rpx 0;
  font-size: 32rpx;
}
.fight_result .result .me .score,
.fight_result .result .rival .score {
  font-size: 34rpx;
  color: #eeb50c;
}
.fight_result .result .me .integral,
.fight_result .result .rival .integral {
  font-size: 24rpx;
  color: #46d7b6;
  padding: 24rpx 0;
}
.fight_result .result .me .integral.error,
.fight_result .result .rival .integral.error {
  color: #de5a68;
}
.fight_result .result .vs {
  padding-top: 30rpx;
}
.fight_result .result .vs image {
  width: 106rpx;
  height: 72rpx;
}
.fight_result .result .plate {
  top: -170rpx;
  left: calc(50% - 267rpx);
}
.fight_result .result .plate image {
  width: 534rpx;
  height: 238rpx;
}
.fight_result .btn-box {
  padding: 50rpx 40rpx 90rpx;
  min-height: 80rpx;
}
.fight_result .btn-box .result-btn {
  border-radius: 80rpx;
  font-size: 34rpx;
  line-height: 34rpx;
  padding: 12rpx 0;
  width: 280rpx;
  background-color: transparent;
  border: 10rpx solid #ffffff;
  color: #fff;
  font-weight: 300;
}
.fight_result .rule {
  padding: 0 40rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: rgba(255, 255, 255, 0.5);
}
